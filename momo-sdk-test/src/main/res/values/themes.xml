<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MomoSDK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/dark_red</item>
        <!--Text Color-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/cardview_light_background</item>
    </style>

</resources>